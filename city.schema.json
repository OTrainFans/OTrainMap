{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://map.railfans.ca/city-schema.json",
  "title": "Cities",
  "description": "City definitions for the RailFans Canada map",
  "type": "object",
  "propertyNames": {
    "pattern": "^([A-Za-z])\\w+"
  },
  "patternProperties": {
    "": {
      "type": "object",
      "properties": {
        "location": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "items": { "type": "number" },
          "additionalItems": false,
          "title": "Region Location",
          "description": "LngLat location to use as the location of a label for this region"
        },
        "bbox": {
          "type": "array",
          "minItems": 4,
          "maxItems": 4,
          "items": { "type": "number" },
          "additionalItems": false,
          "title": "Region Bounding Box",
          "description": "A 2D bounding box that contains all of the data in this region, used to determine when to load the agencies in the region"
        },
        "name": {
          "type": "string",
          "title": "Region Name",
          "description": "The name of the region "
        },
        "agencies": {
          "title": "Agencies",
          "descirption": "",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "title": "Agency Name",
                "description": "Name of the agency, or transit system",
                "type": "string"
              },
              "data": {
                "title": "Agency Data",
                "description": "List of all .geojson files containing data for this agency/system",
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "uri-reference"
                }
              }
            },
            "required": ["name", "data"]
          }
        }
      },
      "required": ["location", "bbox", "name", "agencies"]
    }
  }
}
